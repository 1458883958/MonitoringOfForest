<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_128"
    android:layout_margin="@dimen/len_14"
    android:background="@drawable/bg_account_input"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/len_8">

    <TextView
        android:id="@+id/go_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_28"
        android:layout_marginBottom="@dimen/len_12"
        android:gravity="center"
        android:text="@string/label_have_account_go_bind"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_alpha_16" />

    <TextView
        android:id="@+id/go_reg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_28"
        android:layout_marginTop="@dimen/len_12"
        android:gravity="center"
        android:text="@string/label_not_account_go_reg"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textPrimary" />

</LinearLayout>