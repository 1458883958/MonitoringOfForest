<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/len_4"
    android:layout_margin="@dimen/len_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/len_8"
    app:contentPaddingTop="@dimen/len_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/len_8"
        android:layout_marginStart="@dimen/len_8"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/label_click_deal"
                android:gravity="start"
                android:id="@+id/deal_result"
                android:layout_width="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/len_14"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/textAccent" />
            <TextView
                android:gravity="end"
                android:layout_gravity="end"
                android:id="@+id/result"
                android:textSize="@dimen/len_14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/len_4">

            <ImageView
                android:id="@+id/his_pic_or"
                android:layout_width="0dp"
                android:layout_height="@dimen/len_156"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/his_pic_de"
                android:layout_width="0dp"
                android:layout_height="@dimen/len_156"
                android:layout_marginStart="@dimen/len_8"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/len_4"
            android:layout_marginEnd="@dimen/len_4"
            android:layout_marginTop="@dimen/len_4"
            android:gravity="end"
            android:padding="@dimen/len_2"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

    </LinearLayout>

</android.support.v7.widget.CardView>