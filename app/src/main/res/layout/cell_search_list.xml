<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:foreground="@drawable/ic_touch_fg"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/len_12"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12">

    <com.wdl.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/default_portrait" />

    <TextView
        android:id="@+id/im_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/fontNameSize" />

    <ImageView
        android:id="@+id/im_follow"
        android:padding="@dimen/len_2"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/sel_opt_done_add"
        android:background="@drawable/sel_btn_bg_accent_4"
        android:tint="@color/white_alpha_208"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/font_28"
        android:contentDescription="@string/app_name" />

</LinearLayout>