<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".fragments.qq.BindFragment">

    <LinearLayout
        android:layout_marginStart="@dimen/len_8"
        android:layout_marginEnd="@dimen/len_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:background="@drawable/bg_account_input"
        android:orientation="vertical"
        android:padding="@dimen/len_8">

        <EditText
            android:id="@+id/uTelephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:background="@null"
            android:hint="@string/label_phone"
            android:textColor="@color/textPrimary"
            android:inputType="phone"
            android:paddingEnd="@dimen/len_2"
            android:paddingStart="@dimen/len_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="@color/textSecond"
            android:layout_marginTop="@dimen/len_2"
            tools:ignore="LabelFor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD3DADF" />

        <EditText
            android:layout_marginTop="@dimen/len_8"
            android:paddingEnd="@dimen/len_2"
            android:paddingStart="@dimen/len_4"
            android:textColor="@color/textPrimary"
            android:id="@+id/uPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:background="@null"
            android:hint="@string/label_password"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="@color/textSecond"
            tools:ignore="LabelFor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD3DADF" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/len_20"
        android:text="@string/label_submit" />

</FrameLayout>