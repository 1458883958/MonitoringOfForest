<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginStart="@dimen/len_2"
    android:layout_marginEnd="@dimen/len_2"
    android:background="@drawable/bg_item_notice"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/len_12"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12">


    <TextView
        android:id="@+id/im_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/len_20"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/im_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginTop="@dimen/len_8"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="5"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/textSecond"
        tools:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/im_attach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginTop="@dimen/len_12"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/im_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginTop="@dimen/len_8"
        android:gravity="center_vertical|end"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/textSecond"
        tools:text="@string/app_name" />

</LinearLayout>