<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_8"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:id="@+id/pi_bg"
    android:background="@drawable/bg_account_input"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/len_10"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pName"
            android:layout_width="0dp"
            android:layout_height="@dimen/len_28"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            tools:text="@string/app_name" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/pSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:longClickable="false"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textOff="@string/label_switch_off"
            android:textOn="@string/label_switch_on"
            android:theme="@style/MySwitchTheme"
            app:showText="true"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_remark"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:hint="@string/label_hint_remark"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_threshold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

        <EditText
            android:id="@+id/et_threshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:hint="@string/label_hint_threshold"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_delayed"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

        <EditText
            android:id="@+id/et_delayed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:hint="@string/label_hint_delayed"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pi_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:hint="@string/label_hint_password"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_boot_state"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textSecond" />

        <ImageView
            android:id="@+id/boot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_circle" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/setting"
            android:layout_marginTop="@dimen/len_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_settings"
            android:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/submit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_10"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_submit"
            android:tint="@color/colorAccent" />

    </RelativeLayout>


</LinearLayout>