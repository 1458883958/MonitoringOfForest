<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical"
        tools:context=".fragments.main.PersonalFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_172"
            android:layout_margin="@dimen/len_4"
            android:background="@color/white"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/len_16">

            <com.wdl.common.widget.PortraitView
                android:id="@+id/mPortrait"
                android:layout_width="@dimen/portraitSize"
                android:layout_height="@dimen/portraitSize"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/mTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textSecond"
                android:text="@string/app_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:gravity="center"
                android:text="@string/label_account_alisa"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:layout_marginTop="@dimen/len_14"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_info"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_setting"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:layout_marginTop="@dimen/len_14"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_call"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/tel"
                android:textSize="@dimen/len_12"
                android:layout_toStartOf="@+id/right"
                android:text="@string/data_phone_number"
                android:layout_marginEnd="@dimen/len_6"
                android:textColor="@color/textSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_shop"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:layout_marginTop="@dimen/len_14"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_share"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:background="#fff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:text="@string/label_account_about"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/textPrimary"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/len_12"
                android:layout_height="@dimen/len_12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_12"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_direction_right"
                android:tint="@color/textSecond" />

        </RelativeLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_36"
            android:layout_marginTop="@dimen/len_14"
            android:background="@color/white"
            android:text="@string/label_logout"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/red_300" />

    </LinearLayout>
</ScrollView>