<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".fragments.qq.BindFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_8"
        android:layout_marginEnd="@dimen/len_8"
        android:layout_marginTop="@dimen/len_20"
        android:background="@drawable/bg_account_input"
        android:orientation="vertical"
        android:padding="@dimen/len_12">

        <EditText
            android:id="@+id/uTelephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:background="@null"
            android:hint="@string/label_phone"
            android:inputType="phone"
            android:paddingEnd="@dimen/len_2"
            android:paddingStart="@dimen/len_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond"
            tools:ignore="LabelFor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD3DADF" />

        <EditText
            android:id="@+id/uPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:layout_marginTop="@dimen/len_8"
            android:background="@null"
            android:hint="@string/label_password"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/len_2"
            android:paddingStart="@dimen/len_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond"
            tools:ignore="LabelFor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD3DADF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_2"
                android:layout_marginStart="@dimen/len_4"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/label_code"
                android:inputType="text"
                android:paddingTop="@dimen/len_8"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecond"
                android:textCursorDrawable="@drawable/ic_cursor"
                android:textSize="@dimen/font_14" />

            <Button
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginRight="@dimen/len_8"
                android:background="@drawable/bg_account_code"
                android:foreground="@drawable/ic_touch_fg"
                android:text="@string/label_get_the_verifying_code"
                android:textColor="@color/black_alpha_64" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/len_20"
        android:text="@string/label_submit" />

</FrameLayout>